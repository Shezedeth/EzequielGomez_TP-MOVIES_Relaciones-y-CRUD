<!DOCTYPE html>
<html lang="es">

<%- include('partials/head', {title: 'SalióPeli | Lista de Películas' }) %>

    <!-- ----------------------------------- -->

    <body class="body_moviesList">

        <div class="movieList__body_codingnepal">

            <%- include('partials/slideBarMenu') %>
                <div class="movieList_cards-wrapper_codingnepal">
                    <div class="movieList_cards-box">

                        <main class="admin__main">
                            <h1 class="text-light bg-dark">LISTADO DE PELÍCULAS</h1>
                            <div class="admin__main__containerTable bg-dark">

                                <table class="table table-dark table-hover admin__table ">
                                
                                
                                    <div class="pagination">
                                        <% if (paginate.hasPreviousPages || paginate.hasNextPages(pagesCount)) { %>
                                            <% if (paginate.hasPreviousPages) { %>
                                                <li class="page-item">
                                                    <a class="page-link" href="<%=paginate.href(true).prev%>"
                                                        aria-label="Previous">
                                                        <span aria-hidden="true">&laquo;</span>
                                                    </a>
                                                </li>
                                                <% } %>
                                                    <% if (pages) { %>
                                                        <% pages.forEach(page=> { %>
                                                            <li class="page-number">
                                                                <a href="<%= page.url %>"
                                                                    class="page-link <%= page.number === currentPage && 'active' %> ">
                                                                    <%= page.number%>
                                                                </a>

                                                            </li>
                                                            <% }) %>
                                                                <% } %>
                                                                    <% if (paginate.hasNextPages(pagesCount)) { %>
                                                                        <li class="page-item">
                                                                            <a class="page-link"
                                                                                href="<%=paginate.href()%>"
                                                                                aria-label="Next">
                                                                                <span aria-hidden="true">&raquo;</span>
                                                                            </a>
                                                                        </li>
                                                                        <% } %>

                                                                            <% } %>

                                                                              
                                    </div>

                                    <thead class="admin__table__thead">
                                        <tr>
                                            <th class="bg-dark text-white" scope="col">#</th>

                                            <th class="bg-dark text-white" scope="col">Título</th>

                                            <th class="bg-dark text-white" scope="col">Premios</th>

                                            <th class="bg-dark text-white" scope="col">Rating</th>

                                            <th class="bg-dark text-white" scope="col">Duración</th>

                                            <th class="bg-dark text-white" scope="col">Estreno</th>

                                            <th class="bg-dark text-white" scope="col">Género</th>

                                            <th class="bg-dark text-white" scope="col">Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody class="moviesList__tbody">
                                        <% for( let i=0; i < movies.length; i++ ) { %>
                                            <tr>
                                                <th class="bg-dark text-white " scope="row">
                                                    <%= i + 1 %>
                                                </th>

                                                <td class="bg-dark text-white ">

                                                    <a href="/movies/detail/<%= movies[i].id %>">
                                                        <%= movies[i].title %>
                                                    </a>

                                                </td>

                                                <td class="bg-dark text-white text__center">
                                                    <%= movies[i].awards %>
                                                </td>

                                                <td class="bg-dark text-white text__center">
                                                    <%= movies[i].rating %>
                                                </td>

                                                <td class="bg-dark text-white text__center">
                                                    <%= movies[i].length || 'Sin especificar' %>
                                                </td>

                                                <td class="bg-dark text-white text__center">
                                                    <%= moment(movies[i].release_date).format('YYYY-MM-DD')
                                                        || 'Sin especificar' %>
                                                </td>

                                                <td class="bg-dark text-white text__center">
                                                    <%= movies[i].genre?.name || 'Sin especificar' %>
                                                </td>

                                                <td>
                                                    <div class="d-flex justify-content-center gap-1">

                                                        <button type="button" class="btn btn-sm btn-primary"
                                                            data-bs-toggle="modal"
                                                            data-bs-target="#detailProduct<%= movies[i].id %>">
                                                            <i class="fas fa-eye"></i>
                                                        </button>

                                                        <div class="modal fade admin__modalContainer"
                                                            id="detailProduct<%= movies[i].id %>" tabindex="-1"
                                                            aria-labelledby="detailProduct<%= movies[i].id %>Label"
                                                            aria-hidden="true">
                                                            <div
                                                                class="modal-dialog  modal-dialog-centered text-white admin__modal__container">
                                                                <div
                                                                    class="modal-content bg-dark admin__modal__container__content">
                                                                    <div
                                                                        class="modal-header admin__modal__container__header">
                                                                        <h5 class="modal-title"
                                                                            id="detailProduct<%= movies[i].id %>Label">
                                                                            <%= movies[i].title %>
                                                                        </h5>
                                                                        <button type="button"
                                                                            class="btn-close admin__btn__close"
                                                                            data-bs-dismiss="modal" aria-label="Close">
                                                                            <i class="fa-solid fa-xmark"></i></button>
                                                                    </div>
                                                                    <div class="modal-body admin__modalbody">
                                                                        <div
                                                                            class="card mb-3 bg-dark  admin__modalbody__card">
                                                                            <div
                                                                                class="row g-0 bg-dark  admin__modalbody__card__container">
                                                                                <div
                                                                                    class="col-md-6 admin__modalbody__card__containerImagen">
                                                                                    <img class="card-img-top"
                                                                                        src="/img/image-default.gif"
                                                                                        class="img-fluid rounded-start"
                                                                                        alt="...">
                                                                                </div>
                                                                                <div
                                                                                    class="col-md-6 admin__modalbody__card__container__card">
                                                                                    <div
                                                                                        class="card-body admin__modalbody__card__container__card__txt">
                                                                                        <h5
                                                                                            class="card-text bg-dark text-white">
                                                                                            imagen no disponible
                                                                                        </h5>
                                                                                        <p
                                                                                            class="card-text bg-dark text-white">
                                                                                            pero es un PE-LI-CU-LON
                                                                                        </p>
                                                                                    </div>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <a class="btn btn-sm btn-success"
                                                            href="/movies/edit/<%= movies[i].id %>"><i
                                                                class="fas fa-edit"></i></a>

                                                        <!-- Button trigger modal -->
                                                        <a href="/movies/delete/<%= movies[i].id %>" type="button"
                                                            class="btn btn-sm btn-danger">

                                                            <i class="fas fa-trash"></i>
                                                        </a>

                                                    </div>
                                                </td>
                                            </tr>
                                            <% } %>
                                    </tbody>
                                </table>

                            </div>

                        </main>




                    </div>


                </div>

        </div>



    </body>
    <!-- ---------------------------------- -->
    <footer>

    </footer>

</html>